# ===========================================
# Stock Manager - Environment Configuration
# ===========================================

# --- KIS API Credentials (Required) ---
# Get your keys from: https://apiportal.koreainvestment.com/
KIS_APP_KEY=
KIS_APP_SECRET=

# --- KIS Trading Configuration ---
# Use paper trading (true) or real trading (false)
KIS_USE_MOCK=true
# Account number from KIS
KIS_ACCOUNT_NUMBER=
# Account product code (default: 01)
KIS_ACCOUNT_PRODUCT_CODE=01

# --- Trading Parameters (forward-looking placeholders) ---
# Not yet consumed by a config class; kept for future TradingConfig integration.
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=1000

# --- Slack Notifications (Optional) ---
# Set to true to enable Slack notifications
SLACK_ENABLED=false
SLACK_BOT_TOKEN=
SLACK_DEFAULT_CHANNEL=
SLACK_ORDER_CHANNEL=
SLACK_ALERT_CHANNEL=
SLACK_MIN_LEVEL=INFO

# --- Runtime (forward-looking placeholder) ---
# LOG_LEVEL is not yet consumed by a config class; kept for future use.
LOG_LEVEL=INFO
