# ===========================================
# Stock Manager - Environment Configuration
# ===========================================

# --- KIS API Credentials ---
# Get your keys from: https://apiportal.koreainvestment.com/
# Real trading credentials (required when KIS_USE_MOCK=false)
KIS_APP_KEY=
KIS_APP_SECRET=

# Mock trading credentials (required when KIS_USE_MOCK=true)
KIS_MOCK_APP_KEY=
KIS_MOCK_SECRET=

# --- KIS Trading Configuration ---
# Use paper trading (true) or real trading (false)
KIS_USE_MOCK=true

# Real trading account number (required when KIS_USE_MOCK=false)
KIS_ACCOUNT_NUMBER=
# Mock trading account number (required when KIS_USE_MOCK=true)
KIS_MOCK_ACCOUNT_NUMBER=

# Account product code (shared by real/mock, default: 01)
KIS_ACCOUNT_PRODUCT_CODE=01

# Mock mode strict policy:
# - KIS_USE_MOCK=true must use these values explicitly:
#   KIS_MOCK_APP_KEY, KIS_MOCK_SECRET, KIS_MOCK_ACCOUNT_NUMBER
# - Real credentials are not used as fallback in mock mode.




# --- Trading Parameters (forward-looking placeholders) ---
# Not yet consumed by a config class; kept for future TradingConfig integration.
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=1000

# --- Slack Notifications (Optional) ---
# Set to true to enable Slack notifications
SLACK_ENABLED=false
SLACK_BOT_TOKEN=
SLACK_DEFAULT_CHANNEL=
SLACK_ORDER_CHANNEL=
SLACK_ALERT_CHANNEL=
SLACK_MIN_LEVEL=INFO

# Slack Bot Trigger System (Socket Mode)
# Required for: stock-manager slack (always-on Slack listener)
SLACK_APP_TOKEN=xapp-1-...        # App-Level Token for Socket Mode (connections:write scope)
SLACK_ALLOWED_USER_IDS=U12345678  # Comma-separated User IDs allowed to use bot (empty = all)

# --- Logging ---
LOG_LEVEL=INFO
LOG_DIR=logs
